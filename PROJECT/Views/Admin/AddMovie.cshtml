@model Movie

<h2>Add Movie</h2>

<form method="post" asp-controller="Admin" asp-action="AddMovie">
    <div>
        <label for="sectineid">sectineId:</label>
        <input type="text" asp-for="@Model.SectineId" class="form-control" />
    </div>
    <div>
        <label for="Movieid">MovieId:</label>
        <input type="number" asp-for="@Model.MovieId" class="form-control" />
    </div>
    <div>
        <label for="Name">Name:</label>
        <input type="text" asp-for="@Model.Name" class="form-control" />
    </div>
    <div>
        <label for="Description">Description:</label>
        <textarea asp-for="@Model.Description" class="form-control"></textarea>
    </div>
    <div>
        <label for="Price">Price:</label>
        <input type="text" asp-for="@Model.price" class="form-control" />
    </div>
    <div>
        <label for="Picture">picture url</label>
        <input type="text" asp-for="@Model.PictureUrl" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add Movie</button>
</form>
